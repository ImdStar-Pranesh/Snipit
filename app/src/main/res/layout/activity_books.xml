<com.heinrichreimersoftware.materialdrawer.DrawerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:theme="@style/ToolBarStyle"
            app:theme="@style/ToolBarStyle" />

        <com.om.atomic.dragsort_listview.DragSortListView xmlns:dslv="http://schemas.android.com/apk/res-auto"
            android:id="@+id/booksList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:background="@color/less_lighter_gray"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/listview_padding_between"
            android:drawSelectorOnTop="true"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/listview_padding_left_right"
            android:paddingRight="@dimen/listview_padding_left_right"
            android:paddingTop="@dimen/listview_padding_between"
            android:paddingBottom="@dimen/listview_padding_between"
            android:scrollbarStyle="outsideInset"
            dslv:drag_scroll_start="0.11"
            dslv:drag_start_mode="onLongPress"
            dslv:float_alpha="0.6"
            dslv:float_background_color="@color/light_gray"
            dslv:max_drag_scroll_speed="0.9"
            dslv:slide_shuffle_speed="0.2" />

        <RelativeLayout
            android:id="@+id/emptyListLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:visibility="gone">

            <ImageView
                android:id="@+id/bookIMG"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:src="@drawable/book_outline" />

        </RelativeLayout>

        <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/createNewBookBTN"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/create_book"
            fab:fab_colorNormal="@color/green"
            fab:fab_colorPressed="@color/yellow"
            fab:fab_colorRipple="@color/yellow" />

    </RelativeLayout>

