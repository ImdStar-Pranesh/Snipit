<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:validator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:theme="@style/ToolBarStyle_Global" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nameETFloating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.andreabaccega.widget.FormEditText
                android:id="@+id/nameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bookmark_name"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@null"
                validator:emptyErrorString="@string/empty_bookmark_name_error" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pageNumberETFloating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameETFloating">

            <EditText
                android:id="@+id/pageNumberET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/bookmark_page"
                android:inputType="numberSigned"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/edittext_hint_color"
                android:textCursorDrawable="@null" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/bookmarkIMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pageNumberETFloating"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/doneBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        fab:fab_colorNormal="@color/white"
        fab:fab_colorPressed="@color/yellow"
        fab:fab_colorRipple="@color/yellow"
        fab:fab_icon="@drawable/check_done" />


    <com.getbase.floatingactionbutton.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/createNewBookmarkBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        fab:fab_colorPressed="@color/yellow"
        fab:fab_colorRipple="@color/yellow"
        fab:fab_icon="@drawable/create_bookmark_camera" />

</RelativeLayout>
