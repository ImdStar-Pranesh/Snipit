<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/full_feature_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/full_feature_logo" />

    <TextView
        android:id="@+id/appVersionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_feature_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_version" />

    <TextView
        android:id="@+id/introductionTextTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appVersionTV"
        android:layout_marginTop="10dp"
        android:text="@string/introduction_text" />

    <ListView
        android:id="@+id/librariesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introductionTextTV"
        android:layout_marginTop="10dp"
        android:drawSelectorOnTop="true" />

</RelativeLayout>