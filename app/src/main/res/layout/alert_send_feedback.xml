<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:validator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin">

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/sendFeedbackETFloating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/feedbackET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/pref_sendfeedback_alert_hint_tell_us_what_you_think"
            android:inputType="textCapSentences"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/edittext_hint_color"
            android:textCursorDrawable="@null"
            validator:emptyErrorString="@string/empty_feedback_field_error"
            validator:testType="alpha" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <TextView
        android:id="@+id/feedbackSendingSummaryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/pref_sendfeedback_alert_summary" />
</LinearLayout>