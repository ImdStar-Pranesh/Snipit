<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bookmarkIMG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/imageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/bookmarkDetailsView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bookmark_details_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bookmark_details_gradient"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/bookmarkNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_author_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkPageNumberLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />

        <TextView
            android:id="@+id/bookmarkPageNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmarkNameTV"
            android:layout_toEndOf="@+id/bookmarkPageNumberLabelTV"
            android:layout_toRightOf="@+id/bookmarkPageNumberLabelTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkDateAddedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />
    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/createNewNoteBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/bookmarkDetailsView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:src="@android:drawable/ic_menu_edit"
        fab:fab_colorNormal="@color/red"
        fab:fab_colorPressed="@color/darker_red"
        fab:fab_colorRipple="@color/darker_red" />

    <com.melnykov.fab.FloatingActionButton xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/paintBookmarkBTN"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/bookmarkDetailsView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:src="@drawable/paint_bookmark"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/yellow"
        fab:fab_colorRipple="@color/yellow" />

</RelativeLayout>