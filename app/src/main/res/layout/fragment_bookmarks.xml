<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bookmarkIMG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bookmark_details_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bookmark_details_gradient"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/bookmarkNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_author_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkPageNumberLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />

        <TextView
            android:id="@+id/bookmarkPageNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmarkNameTV"
            android:layout_toEndOf="@+id/bookmarkPageNumberLabelTV"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkDateAddedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />

    </RelativeLayout>
</RelativeLayout>