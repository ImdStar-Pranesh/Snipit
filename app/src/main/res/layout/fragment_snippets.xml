<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bookmarkIMG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/imageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/bookmarkDetailsView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bookmark_details_layout_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bookmark_details_gradient"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/bookmarkNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_author_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkPageNumberLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />

        <TextView
            android:id="@+id/bookmarkPageNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookmarkNameTV"
            android:layout_toEndOf="@+id/bookmarkPageNumberLabelTV"
            android:layout_toRightOf="@+id/bookmarkPageNumberLabelTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bookmarkDateAddedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bookmarkNameTV"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_date_added_fsize" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/createNewNoteBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bookmarkDetailsView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_note_white"
        app:backgroundTint="@color/red"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/paintBookmarkBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bookmarkDetailsView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_gesture_white"
        app:backgroundTint="@color/blue"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="mini" />


</RelativeLayout>