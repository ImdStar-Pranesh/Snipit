<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/snippet_grid_item_layout_height"
    android:background="@drawable/listview_items_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/bookmarkIMG_LoaderLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/snippet_grid_item_image_layout_height"
        android:paddingEnd="@dimen/snippets_gridview_padding_between"
        android:paddingStart="@dimen/snippets_gridview_padding_between">

        <ProgressBar
            android:id="@+id/imageProgressLoader"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/bookmarkIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/snippet_grid_item_separator_height"
        android:layout_marginEnd="@dimen/snippet_grid_item_margin_end"
        android:layout_marginRight="@dimen/snippet_grid_item_margin_end"
        android:background="@color/black_translucent" />

    <LinearLayout
        android:id="@+id/bookmarkNameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/bookmarkNameTV"
            android:layout_width="@dimen/bookmark_list_item_bookmark_name_width"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/snippets_gridview_padding_between"
            android:layout_marginLeft="@dimen/snippets_gridview_padding_between"
            android:layout_marginRight="@dimen/snippets_gridview_padding_between"
            android:layout_marginStart="@dimen/snippets_gridview_padding_between"
            android:layout_marginTop="@dimen/snippets_gridview_padding_between"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:textColor="@android:color/black"
            android:textSize="@dimen/snippet_name_grid_item_font_size" />
    </LinearLayout>
