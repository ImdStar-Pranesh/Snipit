<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SHOWCASE VIEW STYLES -->
    <!-- .................... -->

    <style name="ShowcaseView">
        <item name="sv_titleTextAppearance">@style/TextAppearance.ShowcaseView.Title</item>
        <item name="sv_detailTextAppearance">@style/TextAppearance.ShowcaseView.Detail</item>
    </style>

    <style name="CustomShowcaseTheme">
        <item name="sv_backgroundColor">#CC000000</item>
        <item name="sv_showcaseColor">@color/blue</item>
        <item name="sv_buttonText">@string/gotit</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance.Large">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="CompatDarkActionBarTheme" parent="android:Theme.Holo.Light" />
</resources>